{
  "build": {
    "beforeDevCommand": "yarn start",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/release-binary/browser"
  },
  "package": {
    "productName": "Release BIOS",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "close": true
      },
      "fs": {
        "scope": ["**"],
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "readDir": true,
        "exists": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "fileDropEnabled": true,
        "title": "Release BIOS",
        "width": 743,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ReleaseBinary",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
